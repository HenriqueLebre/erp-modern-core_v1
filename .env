# ==================================
# Environment Variables - DEVELOPMENT
# ==================================
# WARNING: This is for LOCAL DEVELOPMENT ONLY
# NEVER use these values in production!

# ==================================
# Application
# ==================================
ASPNETCORE_ENVIRONMENT=Development
BUILD_CONFIGURATION=Release

# ==================================
# Database
# ==================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=erp_auth
POSTGRES_PORT=5433

# ==================================
# Auth API
# ==================================
AUTH_API_PORT=5281

# ==================================
# JWT Configuration
# ==================================
# Generate production secret: openssl rand -base64 64
JWT_SECRET_KEY=dev-local-key-min-32-chars-DO-NOT-USE-IN-PRODUCTION-12345678
JWT_ISSUER=erp-modern-core
JWT_AUDIENCE=erp-modern-core-clients
JWT_EXPIRATION_HOURS=8

# ==================================
# Connection Strings
# ==================================
AUTH_DB_CONNECTION_STRING=Host=postgres;Port=5432;Database=erp_auth;Username=postgres;Password=postgres
AUTH_DB_CONNECTION_STRING_DEV=Host=127.0.0.1;Port=5433;Database=erp_auth;Username=postgres;Password=postgres

# ==================================
# pgAdmin (Optional)
# ==================================
PGADMIN_EMAIL=admin@erp-modern.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
