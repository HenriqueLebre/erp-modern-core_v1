# ==================================
# Environment Variables Template
# ==================================
# IMPORTANT: Copy this file to .env and configure with real values
# NEVER commit .env file to git!

# ==================================
# Application
# ==================================
ASPNETCORE_ENVIRONMENT=Development
BUILD_CONFIGURATION=Release

# ==================================
# Database
# ==================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=erp_auth
POSTGRES_PORT=5433

# ==================================
# Auth API
# ==================================
AUTH_API_PORT=5281

# ==================================
# JWT Configuration
# ==================================
# CRITICAL: Generate a strong secret for production!
# Use: openssl rand -base64 64
# Minimum 32 characters required
JWT_SECRET_KEY=REPLACE_WITH_SECURE_SECRET_MIN_32_CHARS
JWT_ISSUER=erp-modern-core
JWT_AUDIENCE=erp-modern-core-clients
JWT_EXPIRATION_HOURS=8

# ==================================
# Connection Strings
# ==================================
# Format: Host={host};Port={port};Database={db};Username={user};Password={password}
AUTH_DB_CONNECTION_STRING=Host=postgres;Port=5432;Database=erp_auth;Username=postgres;Password=CHANGE_ME_STRONG_PASSWORD

# For local development (docker-compose)
AUTH_DB_CONNECTION_STRING_DEV=Host=127.0.0.1;Port=5433;Database=erp_auth;Username=postgres;Password=CHANGE_ME_STRONG_PASSWORD

# ==================================
# pgAdmin (Optional)
# ==================================
PGADMIN_EMAIL=admin@erp-modern.local
PGADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
PGADMIN_PORT=5050
